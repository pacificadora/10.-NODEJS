<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <script src="https://kit.fontawesome.com/bfccf2635b.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="./css/home.css">
</head>
<body>
    <h2 id="page-heading">
        <i class="fa-solid fa-address-book"></i>
        Contact List
    </h2>

    <div class="contact-list-container">
        <ul>
            <% for(let i of contact_list){%>
                <li>
                    <div class="single-contact">
                        <p><%= i.name %></p>
                        <p><%= i.phone %></p>
                    </div>
                </li>
                <div class="delete-button">
                    <a href="/delete-contact/?id=<%= i._id %>">
                        <i class="fa-solid fa-calendar-xmark"></i>
                    </a>
                </div>
            <%} %>
        </ul>
    </div>

    <form action="/create-contact" method="post">
        <input type="text" name="name" placeholder="enter name" required>
        <input type="number" name="phone" placeholder="enter phone" required>

        <button type="submit"> Add Contact </button>
    </form>

    <script src="./js/home.js" type="text/javascript"></script>
</body>
</html>